# Auto detect text files and perform LF normalization
* text=auto
*.c text eol=lf
*.h text eol=lf
*.sh text eol=lf
*.am text eol=lf
*.md text eol=lf
*.json text eol=lf
*.js text eol=lf
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
configure.additional text eol=lf
*.bat text eol=crlf
*.vcxproj text eol=crlf
*.sln text eol=crlf
*.jpg binary
*.png binary


# Custom for Visual Studio
*.cs     diff=csharp
*.sln    merge=union
*.csproj merge=union
*.vbproj merge=union
*.fsproj merge=union
*.dbproj merge=union

# Standard to msysgit
*.doc	 diff=astextplain
*.DOC	 diff=astextplain
*.docx diff=astextplain
*.DOCX diff=astextplain
*.dot  diff=astextplain
*.DOT  diff=astextplain
*.pdf  diff=astextplain
*.PDF	 diff=astextplain
*.rtf	 diff=astextplain
*.RTF	 diff=astextplain
